<%= form_for(@menu) do |f| %>
  <% if @menu.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@menu.errors.count, "error") %> prohibited this menu from being saved:</h2>

      <ul>
      <% @menu.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <legend>Menu</legend>
    <%= f.hidden_field :user_id, :value => current_user().id %>
    <div class="clearfix">
      <%= f.label :label %>
      <div class="input">
        <%= f.text_field :label, :class => "span3" %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :image %>
      <div class="input">
        <%= f.text_field :image, :class => "span3" %>
      </div>
    </div>
    <div id="menu_items">
      <fieldset>
      <legend>Menu Items</legend>
      <div class="container">
      <%= f.nested_fields_for :menu_items do |mi_form| %>
        <div class="item">
        <div class="clearfix">
          <%= mi_form.label :label %>
          <div class="input">
            <%= mi_form.text_field :label, :class => "span3"%>
          </div>
        </div>
        <div class="clearfix">
          <%= mi_form.label :url %>
          <div class="input">
            <%= mi_form.text_field :url, :class => "span3"%>
          </div>
        </div>
        <div class="clearfix">
          <%= mi_form.label :image %>
          <div class="input">
            <%= mi_form.text_field :image, :class => "span3"%>
          </div>
        </div>
        <a href="#" class="remove">remove</a>

        <%= mi_form.hidden_field :id %>
        <%= mi_form.hidden_field :_destroy %>
        </div>
      <% end %>
      </div>
      </fieldset>
      <a href="#" class="add">add menu item</a>
    </div>
    <div class="actions">
      <%= f.submit :class => "btn primary" %>
    </div>
  </fieldset>
<% end %>
<script type="text/javascript">
$(document).ready(function(e) {
  $('FORM').nestedFields();
});
</script>
